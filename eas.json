{
  "cli": {
    "version": ">= 3.0.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "android": {
        "buildType": "app-bundle"
      },
      "ios": {
        "simulator": false
      },
      "env": {
        "BACKEND_API_URL": "https://backend.strmly.com/api/v1",
        "EXPO_PUBLIC_BACKEND_API_URL": "https://backend.strmly.com/api/v1",
        "GOOGLE_SERVICES_API_KEY": "your-google-api-key"
      }
    }
  }
}